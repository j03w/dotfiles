[color]
  ui = always
  branch = true
  diff = true
  pager = true
  status = true
[alias]
  b    = branch
  g    = grep --break --heading --line-number --ignore-case -I -C 3
  st   = status -sb
  ss   = stash
  sa   = stash apply
  sl   = stash list
  sd   = stash drop
  mt   = mergetool
  co   = checkout
  cm   = commit -m
  ca   = commit --amend
  d    = diff --color-words --ignore-space-at-eol -b -w --ignore-blank-lines
  lg   = log --color --graph --pretty=format:'%Cred%h%Creset ·%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset · %C(bold blue)%an%Creset' --abbrev-commit --
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  po   = push origin HEAD
  pr   = pull --rebase
  rs   = reset --soft
  rh   = reset --hard
[grep]
  lineNumber = true
  extendRegexp = true
